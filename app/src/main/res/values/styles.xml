<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">#5E35B1</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="number">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="header">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textColor">@color/header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/description</item>
    </style>
    <style name="tutorial">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/tutorial</item>
        <item name="android:textColor">@color/purple</item>
    </style>
    <style name="phonetique">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/french</item>
        <item name="android:textColor">@color/header</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
